<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>


<VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="750.0"
      prefWidth="180.0"
      styleClass="main_menu_container" stylesheets="@../../styles/ClientMenu.css"
      xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="jjvu.jmc.mazebank.controllers.admin.AdminMenuController">
    <AnchorPane prefHeight="730.0" prefWidth="160.0" styleClass="left_container">
        <VBox prefHeight="80.0" prefWidth="160.0" styleClass="title_container" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <FontAwesomeIconView glyphName="BANK" size="30"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Maze Bank"/>
        </VBox>
        <VBox prefHeight="400.0" prefWidth="160.0" styleClass="menu_container" AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="100.0">
            <Button fx:id="createClientButton" mnemonicParsing="false" text="Create Client">
                <graphic>
                    <FontAwesomeIconView glyphName="PLUS" size="20"/>
                </graphic>
            </Button>
            <Button fx:id="listClientsButton" mnemonicParsing="false" text="Clients">
                <graphic>
                    <FontAwesomeIconView glyphName="LIST" size="20"/>
                </graphic>
            </Button>
            <Button fx:id="depositButton" mnemonicParsing="false" text="Deposit">
                <graphic>
                    <FontAwesomeIconView glyphName="MONEY" size="20"/>
                </graphic>
            </Button>
            <Button fx:id="logoutButton" mnemonicParsing="false" styleClass="alt_menu_button" text="Logout">
                <graphic>
                    <FontAwesomeIconView glyphName="EXTERNAL_LINK" size="20"/>
                </graphic>
            </Button>
        </VBox>
    </AnchorPane>
</VBox>
